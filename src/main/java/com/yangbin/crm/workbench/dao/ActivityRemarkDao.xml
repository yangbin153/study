<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
 namespace：必须有值，自定义的唯一字符串
 推荐使用：dao 接口的全限定名称
-->
<mapper namespace="com.yangbin.crm.workbench.dao.ActivityRemarkDao">
    <!--
    <select>: 查询数据， 标签中必须是 select 语句
    id: sql 语句的自定义名称，推荐使用 dao 接口中方法名称，
    使用名称表示要执行的 sql 语句
    resultType: 查询语句的返回结果数据类型，使用全限定类名
    -->

    <delete id="deleteRemarkByIds">
        delete from tbl_activity_remark where activityId in
        <foreach collection="array" item="aId" open="(" close=")" separator=",">
            #{aId}
        </foreach>
    </delete>

    <select id="getRemarkCount" resultType="int">
        select COUNT(*) from tbl_activity_remark where activityId in
        <foreach collection="array" item="aId" open="(" close=")" separator=",">
          #{aId}
        </foreach>
    </select>

    <update id="updateRemark">
        update tbl_activity_remark set
        noteContent = #{noteContent},
        editTime = #{editTime},
        editBy = #{editBy},
        editFlag = #{editFlag}
        where id = #{id}
    </update>

    <delete id="deleteRemark">
        delete from tbl_activity_remark where id = #{id}
    </delete>

    <select id="getRemarkList" resultType="ActivityRemark">
        <!--要执行的 sql 语句-->
        select * from tbl_activity_remark where activityId = #{aId}
    </select>

    <insert id="saveRemark">
        insert into tbl_activity_remark(
            id,
            noteContent,
            createTime,
            createBy,
            editTime,
            editBy,
            editFlag,
            activityId
        )values (
            #{id},
            #{noteContent},
            #{createTime},
            #{createBy},
            #{editTime},
            #{editBy},
            #{editFlag},
            #{activityId}
        )
    </insert>
</mapper>
