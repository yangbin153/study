<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
 namespace：必须有值，自定义的唯一字符串
 推荐使用：dao 接口的全限定名称
-->
<mapper namespace="com.yangbin.crm.workbench.dao.TranHistoryDao">
    <!--
    <select>: 查询数据， 标签中必须是 select 语句
    id: sql 语句的自定义名称，推荐使用 dao 接口中方法名称，
    使用名称表示要执行的 sql 语句
    resultType: 查询语句的返回结果数据类型，使用全限定类名
    -->

    <select id="getTranHistoryList" resultType="TranHistory">
        select * from tbl_tran_history where tranId = #{tranId} order by createTime desc
    </select>
    
    <insert id="saveTranHistory">
        insert into tbl_tran_history (
        id,
        stage,
        money,
        expectedDate,
        createTime,
        createBy,
        tranId
        ) values (
        #{id},
        #{stage},
        #{money},
        #{expectedDate},
        #{createTime},
        #{createBy},
        #{tranId}
        );
    </insert>
    
    <!--<select id="" resultType="">
        &lt;!&ndash;要执行的 sql 语句&ndash;&gt;
        select
    </select>-->
</mapper>
